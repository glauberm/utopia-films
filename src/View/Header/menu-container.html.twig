<div class="menu-container menu-container-disappear visuallyhidden" id="menu-container">
    <nav class="nav-menu" id="nav-menu">
        <ul class="menu-list list-unstyled">
            {% block mainMenu %}
                <li class="menu-item menu-list-disappear{% if model == 'work' %} active {% endif %}"><a id="work-link" title="Work" href="{{ INDEX_URL }}#work">Work</a></li>
                <li class="menu-item menu-list-disappear{% if model == 'service' %} active {% endif %}"><a title="Service" href="{{ INDEX_URL }}service">Service</a></li>
                <li class="menu-item menu-list-disappear{% if model == 'clients' %} active {% endif %}"><a title="Clients" href="{{ INDEX_URL }}clients">Clients</a></li>
                <li class="menu-item menu-list-disappear{% if model == 'directors' %} active {% endif %}"><a title="Directors" href="{{ INDEX_URL }}directors">Directors</a></li>
                <li class="menu-item menu-list-disappear{% if model == 'locations' %} active {% endif %}"><a title="Locations" href="{{ INDEX_URL }}locations">Locations</a></li>
                <li class="menu-item menu-list-disappear{% if model == 'contact' %} active {% endif %}"><a title="Contact" href="{{ INDEX_URL }}contact">Contact</a></li>
            {% endblock %}
        </ul>
    </nav>
    <div id="close-trigger" class="close-trigger visuallyhidden">
        <button class="btn btn-link" title="Close menu">
            {% include 'Header/close.svg.html.twig' %}
        </button>
    </div>
    <div class="menu-container-background" style="background-image: url('{{ BASE_URL }}assets/img/pig.svg');"></div>
</div>
