<div class="container">
    {% for title,values in value %}

        <div class="text-left">
            <div class="row">
                <div class="col-sm-3 text-center w-border-r">
                    <h3 class="h4">{{ title }}</h3>
                </div>
                <div class="col-sm-8 col-md-push-1">
                    <dl>
                        <div class="row">
                            {% for dt,dd in values %}
                                <div class="col-sm-4">
                                    <dt>{{ dt }}</dt>
                                    <dd>{{ dd }}</dd><br/>
                                </div>
                                {% if loop.index % 3 == 0 %}
                                    </div>
                                    <hr class="invisible"/>
                                    <div class="row">
                                {% endif %}
                            {% endfor %}
                        </div>
                    </dl>
                </div>
            </div>
        </div>

    {% endfor %}
</div>
