{% extends 'base.html.twig' %}

{% set title = 'Work' %}

{% block main %}
    <section class="reels box-container">
        <div class="container">
            <header id="work" class="work">
                <h1 class="page-header text-center">
                    <a class="link-work" href="#work">{{ title }}</a>
                </h1>
            </header>
        </div>
        <article class="container big-container">

            <ul class="list-unstyled popup-gallery">
                <div class="box-row row">
                    {% for work in params %}

                        <div class="box-column col-sm-6">
                            <li class="box-image">
                                <figure class="image">

                                {% if work.video is defined %}

                                    <a class="mfp-iframe" href="{{ work.video }}" target="_blank">
                                        <img class="img-responsive" src="{{ BASE_URL }}assets/img/work/{{ work.image }}.jpg"/>

                                {% else %}

                                    <a class="mfp-image" href="{{ BASE_URL }}assets/img/print/full/{{ work.image }}.jpg" target="_blank">
                                        <img class="img-responsive" src="{{ BASE_URL }}assets/img/print/thumb/{{ work.image }}.jpg"/>

                                {% endif %}

                                        <figcaption>
                                            <h2 class="h4">{{ work.title }}</h2>
                                            <dl class="dl-horizontal hidden-xs hidden-sm">
                                                {% for key,value in work.infos %}
                                                    <dt>{{ key }}</dt>
                                                    <dd>{{ value }}</dd>
                                                {% endfor %}
                                            </dl>
                                        </figcaption>
                                    </a>
                                </figure>
                            </li>
                        </div>

                        {% if loop.index % 2 == 0 %}</div><div class="box-row row">{% endif %}

                    {% endfor %}
                </div>
            </ul>
        </article>
    </section>
{% endblock %}
