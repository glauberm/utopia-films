window.sr = ScrollReveal();


    let fixedContainer = document.getElementById("fixed-container");

    fixedContainer.classList.add("fixed-container-fixed");

    window.onscroll = (function() {
        if (window.pageYOffset <= 0) {
            h = 100;
            fixedContainer.classList.remove("fixed-container-box-shadow");
        } else if (window.pageYOffset >= 400) {
            h = 15;
            fixedContainer.classList.add("fixed-container-box-shadow");
        } else {
            h = 100 - 15 * (window.pageYOffset / 100);
            fixedContainer.classList.remove("fixed-container-box-shadow");
        }

        fixedContainer.style.height = h+"%";
    });


    const featuredWorkSiema = new Siema({
        selector: '.siema',
        duration: 500,
        easing: 'ease-out',
        perPage: 1.5,
        startIndex: 0,
        draggable: true,
        threshold: 20,
        loop: false,
    });

    document.querySelector('.prev').addEventListener('click', () => featuredWorkSiema.prev());
    document.querySelector('.next').addEventListener('click', () => featuredWorkSiema.next());


    sr.reveal('#menu-container', {
        origin: 'left',
        distance: '75%',
        duration: 500,
    });

    sr.reveal('#menu-trigger', {
        origin: 'left',
        distance: '75%',
        duration: 500,
    });


    let menuItens = document.body.getElementsByClassName('menu-item');
    for (var i = 0; i < menuItens.length; i++) {
        sr.reveal(menuItens[i], {
            origin: 'left',
            duration: 500,
            delay: 125*i,
            easing: 'ease-out',
            mobile: false,
            reset: true,
        });
    }

    // DO INDEX.HTML

        const featuredWorkSiema = new Siema({
            selector: '.siema',
            duration: 500,
            easing: 'ease-out',
            perPage: 1.5,
            startIndex: 0,
            draggable: true,
            threshold: 20,
            loop: false,
        });

        document.querySelector('.prev').addEventListener('click', () => featuredWorkSiema.prev());
        document.querySelector('.next').addEventListener('click', () => featuredWorkSiema.next());

        window.onscroll = scroll;

        let fixedContainer = document.getElementById("fixed-container");
        fixedContainer.classList.add("fixed-container-fixed");

        function scroll ()
        {
            console.log(window.pageYOffset);

            if (window.pageYOffset <= 0) {
                h = 100;
                fixedContainer.classList.remove("fixed-container-box-shadow");
            } else if (window.pageYOffset >= 400) {
                h = 15;
                fixedContainer.classList.add("fixed-container-box-shadow");
            } else {
                h = 100 - 15 * (window.pageYOffset / 100);
                fixedContainer.classList.remove("fixed-container-box-shadow");
            }

            fixedContainer.style.height = h+"%";
        }

        window.sr = ScrollReveal();
        sr.reveal('.menu-container', {
            origin: 'left',
            distance: '75%',
        });

        var elements = document.body.getElementsByClassName('menu-item');

        for (var i = 0; i < elements.length; i++) {
            sr.reveal(elements[i], {
                origin: 'left',
                delay: 125*i,
            });
        }

        sr.reveal('.menu-trigger', {
            origin: 'left',
            distance: '75%',
        });
